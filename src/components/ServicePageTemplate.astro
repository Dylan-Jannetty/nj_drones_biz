---
interface Props {
  title: string;
  description: string;
  heroImage: string;
  icon: string;
  features: string[];
  process: Array<{
    step: number;
    title: string;
    description: string;
  }>;
  pricing?: {
    basic: string;
    premium: string;
    enterprise: string;
  };
  serviceType: string;
}

const { title, description, heroImage, icon, features, process, pricing, serviceType } = Astro.props;
---

<section class="relative h-96 flex items-center justify-center overflow-hidden">
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url('${heroImage}')`}
  ></div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  
  <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
    <div class="text-6xl mb-4">{icon}</div>
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
    <p class="text-xl text-gray-200 max-w-2xl mx-auto">{description}</p>
  </div>
</section>

<section class="section-padding bg-white">
  <div class="container-max">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">What We Offer</h2>
        <ul class="space-y-4">
          {features.map((feature) => (
            <li class="flex items-start">
              <svg class="w-6 h-6 text-primary-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-gray-700">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="bg-gray-50 rounded-lg p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to Get Started?</h3>
        <p class="text-gray-600 mb-6">Contact us today for a free consultation and personalized quote.</p>
        <div class="space-y-4">
          <a href="/contact" class="btn-primary w-full text-center block">Get Free Quote</a>
          <a href="tel:+15551234567" class="btn-secondary w-full text-center block">Call Now</a>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-padding bg-gray-50">
  <div class="container-max">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Process</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        We follow a proven process to ensure exceptional results every time
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {process.map((step) => (
        <div class="text-center">
          <div class="bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4 text-xl font-bold">
            {step.step}
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

{pricing && (
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Pricing</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Transparent pricing with no hidden fees
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Basic Package</h3>
          <p class="text-3xl font-bold text-primary-600 mb-6">{pricing.basic}</p>
          <ul class="space-y-2 text-gray-600">
            <li>• 1-2 hours of filming</li>
            <li>• Basic editing</li>
            <li>• 2-3 deliverable videos</li>
            <li>• HD quality output</li>
          </ul>
        </div>
        
        <div class="bg-primary-600 text-white rounded-xl p-8 transform scale-105">
          <h3 class="text-xl font-bold mb-4">Premium Package</h3>
          <p class="text-3xl font-bold mb-6">{pricing.premium}</p>
          <ul class="space-y-2">
            <li>• 3-4 hours of filming</li>
            <li>• Professional editing</li>
            <li>• 5-6 deliverable videos</li>
            <li>• 4K quality output</li>
            <li>• Drone + ground footage</li>
          </ul>
        </div>
        
        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Enterprise Package</h3>
          <p class="text-3xl font-bold text-primary-600 mb-6">{pricing.enterprise}</p>
          <ul class="space-y-2 text-gray-600">
            <li>• Full day filming</li>
            <li>• Cinematic editing</li>
            <li>• Unlimited deliverables</li>
            <li>• 4K + RAW footage</li>
            <li>• Multiple locations</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
)}

<section class="section-padding bg-primary-600">
  <div class="container-max">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Capture Amazing {title}?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's discuss your project and create something extraordinary together.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={`/contact?service=${serviceType}`} class="bg-white text-primary-600 hover:bg-gray-100 font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-lg">
          Get Quote for {title}
        </a>
        <a href="/portfolio" class="bg-primary-700 hover:bg-primary-800 text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-lg">
          View {title} Portfolio
        </a>
      </div>
    </div>
  </div>
</section>
---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
import Testimonials from "../components/Testimonials.astro";
import ContactCTA from "../components/ContactCTA.astro";

// Generate initial video URL with default dimensions
function generateVideoUrl(width = 1800, height = 1400) {
  return `https://res.cloudinary.com/dfhs35j6e/video/upload/q_auto:best,fps_24,du_15/v1752812428/DJI_Fly_Video_July_15_2025_1_gqkubx.mp4`;
}

const initialVideoUrl = generateVideoUrl();
---

<BaseLayout
  title="Professional Drone Videography Services | NJ Drones"
  description="Professional drone videography services for real estate, weddings, automotive, and business promotions in New Jersey and surrounding areas. Get stunning aerial footage that captures your vision."
>
  <Hero
    title="Elevate Your Story with Professional Drone Videography"
    subtitle="Capturing breathtaking aerial footage for real estate, weddings, automotive, and business promotions across New Jersey and beyond."
    videoSrc={initialVideoUrl}
    imageSrc="/images/hero-background.jpg"
  />

  <ServicesGrid />

  <section class="section-padding relative overflow-hidden">
    <!-- Complex Background Design -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- Gradient background with organic flow -->
      <div class="absolute inset-0 bg-gradient-to-br from-stone-50 via-white to-accent-50"></div>
      
      <!-- Floating organic shapes -->
      <div class="absolute -top-20 -right-20 w-96 h-96 bg-gradient-to-br from-vibrant-200/20 to-vibrant-300/10 rounded-full blur-3xl transform rotate-12"></div>
      <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-gradient-to-tr from-success-200/20 to-success-300/10 rounded-full blur-3xl transform -rotate-12"></div>
      <div class="absolute top-1/3 left-1/3 w-64 h-64 bg-gradient-to-r from-warning-200/15 to-transparent rounded-full blur-3xl transform rotate-45"></div>
      
      <!-- Subtle pattern overlay -->
      <div class="absolute inset-0 bg-dot-pattern opacity-5"></div>
      
      <!-- Flowing wave elements -->
      <div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-white/50 to-transparent"></div>
      <div class="absolute bottom-0 right-0 w-full h-32 bg-gradient-to-t from-accent-50/50 to-transparent"></div>
    </div>
    
    <div class="container-max relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-stone-900 mb-4">
          Why Choose NJ Drones?
        </h2>
        <p class="text-xl text-stone-600 max-w-2xl mx-auto">
          We combine cutting-edge technology with creative vision to deliver
          exceptional results
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div
            class="bg-vibrant-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-vibrant-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2">
            FAA Certified
          </h3>
          <p class="text-stone-600">
            Licensed and insured drone pilot with all necessary certifications
          </p>
        </div>

        <div class="text-center">
          <div
            class="bg-vibrant-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-vibrant-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2">
            4K Video Quality
          </h3>
          <p class="text-stone-600">
            Professional-grade equipment delivering stunning 4K resolution
            footage
          </p>
        </div>

        <div class="text-center">
          <div
            class="bg-vibrant-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-vibrant-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2">
            Fast Turnaround
          </h3>
          <p class="text-stone-600">
            Quick delivery of edited footage within 48-72 hours
          </p>
        </div>

        <div class="text-center">
          <div
            class="bg-vibrant-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-vibrant-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2">
            Personal Service
          </h3>
          <p class="text-stone-600">
            Dedicated support from consultation to final delivery
          </p>
        </div>
      </div>
    </div>
  </section>

  <Testimonials />

  <ContactCTA />
</BaseLayout>
